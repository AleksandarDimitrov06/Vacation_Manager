@model List<(string RoleId, string RoleName, bool IsSelected)>

@{
    ViewData["Title"] = "Управление на роли за потребител";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h4>Управление на роли за потребител</h4>
                    <p class="mb-0">Потребител: <strong>@ViewBag.FullName (@ViewBag.UserName)</strong></p>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" name="userId" value="@ViewBag.UserId" />

                        <div class="list-group mb-4">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="list-group-item">
                                    <div class="form-check">
                                        @if (Model[i].IsSelected)
                                        {
                                            <input type="radio" name="selectedRole" value="@Model[i].RoleName" class="form-check-input" checked required />
                                        }
                                        else
                                        {
                                            <input type="radio" name="selectedRole" value="@Model[i].RoleName" class="form-check-input" required />
                                        }
                                        <label class="form-check-label">
                                            @Model[i].RoleName
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Всеки потребител трябва да има точно една роля.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="AllUsers" class="btn btn-secondary">Отказ</a>
                            <button type="submit" class="btn btn-primary">Запази промените</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 