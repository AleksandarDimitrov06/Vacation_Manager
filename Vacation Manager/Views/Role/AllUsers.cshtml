@model List<(Vacation_Manager.Models.User User, List<string> Roles)>

@{
    ViewData["Title"] = "Всички потребители";
    var roles = (IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>)ViewBag.Roles;
    var currentPage = ViewBag.CurrentPage;
    var totalPages = ViewBag.TotalPages;
    var pageSize = ViewBag.PageSize;
    var totalUsers = ViewBag.TotalUsers;
    var currentRoleFilter = ViewBag.CurrentRoleFilter;
    var currentSearchString = ViewBag.CurrentSearchString;
}

<div class="container">
    <h2 class="mb-4">Управление на потребители</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Филтриране и търсене</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Филтър по роля</label>
                    <select name="roleFilter" class="form-select" onchange="this.form.submit()">
                        <option value="">Всички роли</option>
                        @foreach (var role in roles)
                        {
                            @if (currentRoleFilter == role.Name)
                            {
                                <option value="@role.Name" selected="selected">@role.Name</option>
                            }
                            else
                            {
                                <option value="@role.Name">@role.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-5">
                    <label class="form-label">Търсене</label>
                    <div class="input-group">
                        <input type="text" name="searchString" class="form-control" placeholder="Търсене по име, имейл..." value="@currentSearchString" />
                        <button type="submit" class="btn btn-primary">Търси</button>
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Записи на страница</label>
                    <select name="pageSize" class="form-select" onchange="this.form.submit()">
                        @if (pageSize == 10)
                        {
                            <option value="10" selected="selected">10</option>
                        }
                        else
                        {
                            <option value="10">10</option>
                        }
                        
                        @if (pageSize == 25)
                        {
                            <option value="25" selected="selected">25</option>
                        }
                        else
                        {
                            <option value="25">25</option>
                        }
                        
                        @if (pageSize == 50)
                        {
                            <option value="50" selected="selected">50</option>
                        }
                        else
                        {
                            <option value="50">50</option>
                        }
                    </select>
                </div>
                <input type="hidden" name="page" value="1" />
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Потребители (@totalUsers)</h5>
            <a asp-action="Index" class="btn btn-secondary">Управление на роли</a>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Потребителско име</th>
                            <th>Име</th>
                            <th>Фамилия</th>
                            <th>Имейл</th>
                            <th>Роли</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.User.UserName</td>
                                <td>@item.User.FirstName</td>
                                <td>@item.User.LastName</td>
                                <td>@item.User.Email</td>
                                <td>
                                    @if (item.Roles != null && item.Roles.Any())
                                    {
                                        @string.Join(", ", item.Roles)
                                    }
                                    else
                                    {
                                        <span class="text-muted">Без роли</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="ManageUserRoles" asp-route-userId="@item.User.Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-gear"></i> Управление на роли
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Пагинация -->
                @if (totalPages > 1)
                {
                    <nav aria-label="Навигация по страници">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="AllUsers" asp-route-page="1" asp-route-roleFilter="@currentRoleFilter" asp-route-searchString="@currentSearchString" asp-route-pageSize="@pageSize">Първа</a>
                            </li>
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="AllUsers" asp-route-page="@(currentPage - 1)" asp-route-roleFilter="@currentRoleFilter" asp-route-searchString="@currentSearchString" asp-route-pageSize="@pageSize">Предишна</a>
                            </li>

                            @{
                                int startPage = Math.Max(1, currentPage - 2);
                                int endPage = Math.Min(totalPages, startPage + 4);
                                if (endPage - startPage < 4 && startPage > 1)
                                {
                                    startPage = Math.Max(1, endPage - 4);
                                }
                            }

                            @for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link" asp-action="AllUsers" asp-route-page="@i" asp-route-roleFilter="@currentRoleFilter" asp-route-searchString="@currentSearchString" asp-route-pageSize="@pageSize">@i</a>
                                </li>
                            }

                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="AllUsers" asp-route-page="@(currentPage + 1)" asp-route-roleFilter="@currentRoleFilter" asp-route-searchString="@currentSearchString" asp-route-pageSize="@pageSize">Следваща</a>
                            </li>
                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="AllUsers" asp-route-page="@totalPages" asp-route-roleFilter="@currentRoleFilter" asp-route-searchString="@currentSearchString" asp-route-pageSize="@pageSize">Последна</a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="alert alert-info">
                    Няма намерени потребители, отговарящи на критериите.
                </div>
            }
        </div>
    </div>
</div> 