@model VacationRequest

@{
    ViewData["Title"] = "New Vacation Request";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="RequestType" class="control-label">Type of Leave</label>
        <select asp-for="RequestType" asp-items="ViewBag.RequestTypes" class="form-control" id="requestTypeSelect">
            <option value="">-- Select Leave Type --</option>
        </select>
        <span asp-validation-for="RequestType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate" class="control-label">Start Date</label>
        <input asp-for="StartDate" class="form-control" type="date" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate" class="control-label">End Date</label>
        <input asp-for="EndDate" class="form-control" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group" id="halfDayGroup">
        <div class="form-check">
            <input asp-for="HalfDay" class="form-check-input" type="checkbox" />
            <label asp-for="HalfDay" class="form-check-label">Half Day</label>
        </div>
    </div>

    <div class="form-group" id="sickNoteGroup" style="display: none;">
        <label class="control-label">Sick Note Attachment</label>
        <input name="sickNote" type="file" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>

        <button type="button" id="debugSubmit" class="btn btn-warning">Debug Submit</button>
    </div>
</form>
<!-- Temporary test form -->
<form action="@Url.Action("Create", "VacationRequest")" method="post" class="mt-4 border p-3 bg-light">
    <h4>Test Direct Form Submission</h4>
    @Html.AntiForgeryToken()
    <input type="hidden" name="RequestType" value="0" />
    <input type="hidden" name="StartDate" value="2025-03-22" />
    <input type="hidden" name="EndDate" value="2025-03-24" />
    <button type="submit" id="debugSubmit">Test Direct Submit</button>
</form>

@section Scripts {

    <script>
        $("#debugSubmit").click(function () {
            var formData = new FormData();
            // Include required fields
            formData.append("RequestType", "0");
            formData.append("StartDate", "2025-03-22");
            formData.append("EndDate", "2025-03-24");
            formData.append("CreationDate", new Date().toISOString());

            // Add the antiforgery token
            formData.append("__RequestVerificationToken", $('input[name="__RequestVerificationToken"]').val());

            $.ajax({
                url: '@Url.Action("Create", "VacationRequest")',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (result) {
                    console.log("Success!", result);
                    window.location.href = '@Url.Action("Index", "VacationRequest")';
                },
                error: function (xhr, status, error) {
                    console.error("Error:", error);
                    console.log(xhr.responseText);
                }
            });
        });
    </script>
}